<br>
   <!-- Le MENU (style noir)-->
      <div class="container-all">
        <div class="row" >
            {% block menu %}
          <div class="col-12  ">
            <nav class=" navbar navbar-expand-sm  navbar-dark bg-dark  ">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse " id="navbarNav">
                <ul class="navbar-nav ">
                  <li class="nav-item  ">
                    <a class="nav-link enable" href="{{path('pro_stage')}}"> Accueil <span class="sr-only">(current)</span></a>
                  </li>
                <!--  <li class="nav-item navbar-nav">
                    <a class="nav-link enable" href="{{path('pro_stage')}}">Stages</a>
                  </li> -->
                  <li class="nav-item navbar-nav">
                    <a class="nav-link enable" href="{{path('pro_stage_entreprise')}}">Entreprises</a>
                  </li>
                  <li class="nav-item navbar-nav">
                    <a class="nav-link enable" href="{{path('pro_stage_formation')}}">Formations</a>
                  </li>
                </ul>

                <ul class="navbar-nav ml-md-auto">

                  {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('stage_index')}}">
                        <i class="icon-plus-1"></i>
                        <b>Gérer les stages</b>
                        <span class="navbar-text"></span>
                    </a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('pro_stage_ajoutEntreprise')}}">
                        <i class="icon-plus-1"></i>
                        <b>Ajouter une entreprise</b>
                        <span class="navbar-text"></span>
                    </a>
                  </li>

                  {% endif %}



                  {% if is_granted('ROLE_USER') %}
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('pro_stage_ajoutStage')}}">
                          <i class="icon-plus-1"></i>
                          <b>Ajouter un stage</b>
                          <span class="navbar-text"></span>
                      </a>
                    </li>
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('app_logout')}}">
                          {{ app.user.prenom }} {{ app.user.nom }}
                          <i class="icon-user"></i>
                          <b>Déconnexion</b>
                          <span class="navbar-text"></span>
                      </a>
                    </li>
                  {% else %}
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('app_inscription')}}">
                        <b>Inscription</b>
                        <span class="navbar-text"></span>
                    </a>
                  </li>
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('app_login')}}">
                          <i class="icon-user"></i>
                          <b>Connexion</b>
                          <span class="navbar-text"></span>
                      </a>
                    </li>
                  {% endif %}


                </ul>
              </div>
            </nav>

          </div>
